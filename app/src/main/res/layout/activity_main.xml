
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000000"

    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:layout_weight="2">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff"
        android:id="@+id/Player_1_layout">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="START"
            android:id="@+id/start_button"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="30dp"
            android:textColor="#761e1e"
            android:textAlignment="center"
            android:id="@+id/Player1_chosen_number"
            android:layout_below="@+id/start_button"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="20dp"
            android:id="@+id/winner1"
            android:textColor="#4074a1"
            android:textSize="40dp"
            android:layout_below="@+id/Player1_chosen_number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="80dp"
            android:textColor="#4074a1"
            android:textAlignment="center"
            android:id="@+id/Player1_guess"
            android:layout_below="@+id/Player1_chosen_number"
            android:layout_marginTop="80dp"
            />



        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list1"
            android:textColor="#ffffff"
            android:layout_below="@id/Player1_guess">
        </ListView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#a6a5a5"
        android:id="@+id/Player_2_layout">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0000"
            android:layout_marginTop="50dp"
            android:textColor="#4074a1"
            android:textSize="30dp"
            android:textAlignment="center"
            android:id="@+id/Player2_chosen_number"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/winner2"
            android:layout_marginTop="20dp"
            android:textColor="#761e1e"
            android:textSize="40dp"
            android:layout_below="@+id/Player2_chosen_number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textColor="#761e1e"
            android:textAlignment="center"
            android:id="@+id/Player2_guess"
            android:layout_below="@+id/Player2_chosen_number"
            android:layout_marginTop="80dp"
            android:textSize="80dp"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list2"
            android:layout_below="@id/Player2_guess">

        </ListView>

    </RelativeLayout>

</LinearLayout>
